<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
            style="@style/Anim_MainActivity"
            android:text="新品"
            android:drawableTop="@drawable/menu_item_new_good_selected"/>
        <RadioButton
            style="@style/Anim_MainActivity"
            android:text="精选"
            android:drawableTop="@drawable/boutique_normal"/>
        <RadioButton
            style="@style/Anim_MainActivity"
            android:text="分类"
            android:drawableTop="@drawable/menu_item_category_normal"/>
        <RadioButton
            style="@style/Anim_MainActivity"
            android:text="购物车"
            android:drawableTop="@drawable/menu_item_cart_normal"/>
        <RadioButton
            style="@style/Anim_MainActivity"
            android:text="我"
            android:drawableTop="@drawable/menu_item_personal_center_normal"/>
    </LinearLayout>
</RelativeLayout>
